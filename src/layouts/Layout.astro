---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import '@fontsource/zen-kaku-gothic-new/400.css'; // 標準ウェイト
import '@fontsource/zen-kaku-gothic-new/700.css'; // 太字（必要な場合）
interface Props {
  title: string;
  description?: string;
  image?: string;
  blogTitle?: string; // ブログ記事のタイトルを渡すためのプロパティを追加
}

const {
  title,
  description = '個人ブログとポートフォリオ',
  image = '/images/default-og.png',
  blogTitle, // ブログタイトルを受け取る
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }

      window.localStorage.setItem('theme', theme);
    </script>
    <!-- 重要: プリロードでフォントの読み込みを高速化 -->
    <link
      rel="preload"
      href="/node_modules/@fontsource/zen-kaku-gothic-new/files/zen-kaku-gothic-new-japanese-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- 太字も使用する場合 -->
    <link
      rel="preload"
      href="/node_modules/@fontsource/zen-kaku-gothic-new/files/zen-kaku-gothic-new-japanese-700-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <slot name="head" />
  </head>
  <body
    class="min-h-screen flex flex-col bg-gray-100 dark:bg-gray-800 text-gray-900 dark:text-gray-100 transition-colors"
  >
    <Header />
    <!-- <div class="h-16"></div> ヘッダーの固定分のスペース -->
    <Breadcrumb blogTitle={blogTitle} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <script>
      document.addEventListener('astro:page-load', () => {
        // ページ遷移後に実行されるコード
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --font-body: 'Zen Kaku Gothic New', sans-serif;
  }

  body {
    font-family: var(--font-body);
  }

  img {
    content-visibility: auto;
  }
</style>
