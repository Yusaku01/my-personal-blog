---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import AstroContactForm from '../components/Contact/AstroContactForm.astro';
---

<Layout title="お問い合わせ（プレーン版） | SAKUSPACE">
  <HeroSection title="CONTACT" isHome={false} />

  <div class="py-12">
    <div class="container-md">
      <div class="p-8">
        <h2 class="text-2xl font-bold mb-6 text-center">お問い合わせ（Astro版）</h2>
        <p class="mb-8 text-center">
          以下のフォームからお気軽にお問い合わせください。
        </p>
        <AstroContactForm />
      </div>
    </div>
  </div>
</Layout>
