---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import ProfileSection from '../components/ProfileSection.astro';
import { ProfileContent } from '../lib/utils/profileData';
---

<Layout title="PROFILE">
  <HeroSection title="PROFILE" isHome={false} />

  <div class="bg-gray-50 dark:bg-gray-900 py-8">
    <div class="container-md container-base">
      <div class="card-base overflow-hidden">
        <!-- カバー画像セクション -->
        <div class="h-48 md:h-64 relative">
          <img
            src={ProfileContent.coverImage}
            alt="カバー画像"
            class="w-full h-full object-cover"
            width="1000"
            height="250"
          />
        </div>

        <div class="px-6 py-8">
          <!-- プロフィールヘッダー -->
          <div class="flex flex-col md:flex-row items-center md:items-start gap-6 mb-8">
            <!-- プロフィール画像 -->
            <div
              class="w-28 h-28 rounded-full overflow-hidden -mt-16 border-4 border-white dark:border-gray-800 relative z-10 bg-white dark:bg-gray-700"
            >
              <img
                src={ProfileContent.avatar}
                alt={ProfileContent.name}
                class="w-full h-full object-cover"
                width="112"
                height="112"
              />
            </div>
            <!-- 名前と肩書き -->
            <div class="text-center md:text-left">
              <h1 class="heading-h1">{ProfileContent.name}</h1>
              <p class="text-xl text-gray-600 dark:text-gray-300 mt-1">{ProfileContent.role}</p>
            </div>
          </div>

          <!-- 自己紹介セクション -->
          <ProfileSection title="自己紹介" className="mb-10">
            <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
              {ProfileContent.bio}
            </p>
          </ProfileSection>

          <!-- スキルセクション -->
          <ProfileSection title="スキル" className="mb-10">
            <!-- 業務スキル -->
            <div class="mb-8">
              <div class="flex items-center gap-3 mb-4">
                <h3 class="heading-h3">業務経験</h3>
                <div class="h-px flex-grow bg-gray-200 dark:bg-gray-700"></div>
              </div>

              <div class="grid grid-cols-1 gap-4">
                {
                  ProfileContent.professionalSkills.map((skill) => (
                    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-100 dark:border-gray-700 p-4 transition-all">
                      <div class="flex items-center justify-between mb-2">
                        <h4 class="heading-h4">{skill.name}</h4>
                        <span class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 text-xs rounded-full">
                          {skill.years}年の経験
                        </span>
                      </div>

                      <div class="text-sm text-gray-600 dark:text-gray-400">{skill.details}</div>
                    </div>
                  ))
                }
              </div>
            </div>

            <!-- 個人開発スキル -->
            <div>
              <div class="flex items-center gap-3 mb-4">
                <h3 class="heading-h3">個人開発・学習</h3>
                <div class="h-px flex-grow bg-gray-200 dark:bg-gray-700"></div>
              </div>

              <div class="grid grid-cols-1 gap-4">
                {
                  ProfileContent.personalSkills.map((skill) => (
                    <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-100 dark:border-gray-700 p-4 transition-all">
                      <div class="flex items-center justify-between mb-2">
                        <h4 class="heading-h4">{skill.name}</h4>
                        <span class="bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 text-xs rounded-full">
                          {skill.years}年の経験
                        </span>
                      </div>

                      <div class="text-sm text-gray-600 dark:text-gray-400">{skill.details}</div>
                    </div>
                  ))
                }
              </div>
            </div>
          </ProfileSection>

          <!-- 経歴セクション -->
          <!-- <ProfileSection title="経歴" className="mb-10">
            <div class="space-y-6">
              {
                ProfileContent.experience.map((exp) => (
                  <div class="border-l-4 border-gray-300 dark:border-gray-700 pl-4 py-1">
                    <div class="text-sm text-gray-500 dark:text-gray-400 mb-1">{exp.period}</div>
                    <h3 class="heading-h3 mb-2">{exp.company}</h3>
                    <p class="text-gray-700 dark:text-gray-300 mb-1 font-medium">{exp.position}</p>
                    <p class="text-gray-600 dark:text-gray-400">{exp.description}</p>
                  </div>
                ))
              }
            </div>
          </ProfileSection> -->

          <!-- 資格セクション -->
          <!-- <ProfileSection title="資格" className="mb-10">
            <ul class="list-disc list-inside space-y-2 text-gray-700 dark:text-gray-300">
              {
                ProfileContent.certifications.map((cert) => (
                  <li>
                    <span class="font-medium">{cert.name}</span>
                    <span class="text-sm text-gray-500 dark:text-gray-400 ml-2">
                      ({cert.year}年取得)
                    </span>
                  </li>
                ))
              }
            </ul>
          </ProfileSection> -->

          <!-- 連絡先セクション -->
          <ProfileSection title="SNS">
            <div class="flex flex-wrap justify-center md:justify-start max-w-fit mx-auto gap-10">
              {
                ProfileContent.socialLinks.map((link) => (
                  <a
                    href={link.url}
                    target="_blank"
                    rel="noopener"
                    class="inline-flex items-center justify-center"
                  >
                    <img src={link.iconLight} class={link.class} />
                  </a>
                ))
              }
            </div>
          </ProfileSection>
        </div>
      </div>
    </div>
  </div>
</Layout>
