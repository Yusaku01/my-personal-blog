---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<Layout title={`${post.data.title} | SAKUSPACE`} blogTitle={post.data.title}>
  <div class="bg-gray-50 dark:bg-gray-900 py-12">
    <div class="container-md container-base">
      <article class="p-8">
        <!-- 1. Title -->
        <h1 class="heading-h1 mb-6">{post.data.title}</h1>

        <!-- 2. Thumbnail Image -->
        {
          post.data.image && (
            <div class="mb-6">
              <img
                src={post.data.image}
                alt={post.data.title}
                class="w-full h-72 object-cover rounded-lg"
              />
            </div>
          )
        }

        <!-- 3. Tags -->
        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="mb-5">
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-3 py-1 rounded-full text-sm font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        <!-- 4. Publish Date and Author -->
        <div class="flex items-center gap-4 text-gray-600 dark:text-gray-400 mb-8 text-sm">
          <span>{format(post.data.publishDate, 'yyyy年MM月dd日')}</span>
          {post.data.author && <span>{post.data.author}</span>}
        </div>

        <!-- 5. Table of Contents -->
        <TableOfContents headings={headings} />

        <!-- 6. Content -->
        <div
          class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-gray-600 dark:prose-invert prose-img:rounded-lg mt-8"
        >
          <Content />
        </div>
      </article>
    </div>
  </div>
</Layout>
