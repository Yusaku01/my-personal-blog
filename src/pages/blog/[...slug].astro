---
import { getCollection } from 'astro:content';
import Layout from '@/shared/layouts/Layout.astro';
import TableOfContents from '@/features/blog/components/TableOfContents.astro';
import ShareButtons from '@/shared/components/sns/ShareButtons.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<Layout title={`${post.data.title} | SAKUSPACE`} blogTitle={post.data.title}>
  <div class="bg-gray-50 dark:bg-gray-800 py-25">
    <div class="container-md container-base">
      <article>
        <!-- 1. Title -->
        <h1 class="heading-h1 lg:text-4xl mb-6">{post.data.title}</h1>

        <!-- 2. Thumbnail Image -->
        {
          post.data.image && (
            <div class="mb-6">
              <img
                src={post.data.image}
                alt={post.data.title}
                class="aspect-[16/9] object-cover rounded-lg"
              />
            </div>
          )
        }

        <!-- 3. Tags -->
        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="mb-5">
              <div class="flex flex-wrap gap-2">
                {post.data.tags.map((tag) => (
                  <span class="border border-gray-900 dark:border-gray-200 text-gray-700 dark:text-gray-200 px-3 py-1 rounded-full text-sm font-medium">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          )
        }

        <!-- 4. Publish Date and Author -->
        <div class="flex items-center gap-4 text-gray-600 dark:text-gray-400 mb-8 text-sm">
          <span>{format(post.data.publishDate, 'yyyy年MM月dd日')}</span>
          {post.data.author && <span>{post.data.author}</span>}
        </div>

        <!-- 5. Table of Contents -->
        <TableOfContents headings={headings} />

        <!-- 6. Content -->
        <div
          class="prose prose-lg max-w-none prose-headings:font-bold prose-a:text-gray-600 dark:prose-invert prose-img:rounded-lg mt-8"
        >
          <Content />
        </div>

        <!-- SNS Share Buttons -->
        <div class="mt-16 pt-8">
          <ShareButtons
            url={new URL(Astro.url.pathname, Astro.site).toString()}
            title={post.data.title}
            class="justify-center md:justify-start"
          />
        </div>
      </article>
    </div>
  </div>
</Layout>

<style is:global>
  .footnotes {
    @apply border-t border-gray-200 dark:border-gray-700 mt-12 pt-8;
  }
  .footnotes ol {
    @apply mb-0;
  }
  .footnotes li:last-child p {
    @apply mb-0;
  }

