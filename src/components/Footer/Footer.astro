---
import SocialIcons from '../Sns/SocialIcons.astro';

const currentYear = new Date().getFullYear();

// ヘッダーと同じナビゲーションアイテムを定義
const navItems = [
  { href: '/', text: 'HOME' },
  { href: '/blog', text: 'BLOG' },
  { href: '/profile', text: 'PROFILE' },
  { href: '/contact', text: 'CONTACT' },
];

// サイトマップへのリンクを追加
const footerLinks = navItems;
---

<footer
  class="bg-gray-900 text-white dark:text-gray-400 dark:bg-gray-900 transition-colors mt-auto"
>
  <div class="container mx-auto px-4 py-20">
    <!-- フッターナビゲーション -->
    <div class="flex flex-col md:flex-row justify-center items-center mb-8 gap-4">
      <nav aria-label="フッターナビゲーション">
        <ul class="flex flex-wrap justify-center gap-x-7 gap-y-2">
          {
            footerLinks.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-white dark:text-gray-300 lg:hover:underline duration-300"
                >
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>

    <!-- SNSアイコン -->
    <div class="flex justify-center items-center mb-8">
      <SocialIcons
        variant="minimal"
        class="gap-4"
        networks={['GitHub', 'X', 'LinkedIn', 'Qiita', 'Zenn', 'RSS']}
        forceTheme="dark"
      />
    </div>

    <!-- コピーライト -->
    <div class="text-center text-gray-400 dark:text-gray-400">
      <small>&copy; {currentYear} SAKUSPACE. All rights reserved.</small>
    </div>
  </div>
</footer>
