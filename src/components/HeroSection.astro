---
interface Props {
  showHero?: boolean;
  title?: string;
  isHome?: boolean;
}

const { showHero = true, title = 'SAKUSPACE', isHome = false } = Astro.props;
---

{
  showHero && (
    <div
      class:list={[
        'hero-section relative bg-white dark:bg-[#333]',
        isHome ? 'py-24 sm:py-32' : 'py-16 sm:py-20',
      ]}
      role="banner"
    >
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl font-light tracking-[0.3em] mb-4 text-gray-900 dark:text-white">
          {title}
        </h1>
      </div>
    </div>
  )
}

