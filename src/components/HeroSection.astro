---
import { heading } from '../styles/unoVariants';

interface Props {
  showHero?: boolean;
  title?: string;
  isHome?: boolean;
}

const { showHero = true, title = 'SAKUSPACE', isHome = false } = Astro.props;
const headingClasses = heading({
  size: 'h1',
  className: 'text-3xl sm:text-4xl font-light tracking-[0.3em] mb-4 text-gray-900 dark:text-white',
});
---

{
  showHero && (
    <div
      class:list={[
        'relative bg-white dark:bg-gray-900',
        isHome ? 'py-24 sm:py-32' : 'py-16 sm:py-20',
      ]}
      role="banner"
    >
      <div class="container-md container-base text-center">
        <h1 class={headingClasses}>{title}</h1>
      </div>
    </div>
  )
}

