---
const navItems = [
  { href: '/', text: 'Home' },
  { href: '/blog', text: 'Blog' },
  { href: '/profile', text: 'Profile' },
];
---

<header class="bg-white dark:bg-gray-800 shadow-sm sticky top-0 z-50 transition-colors">
  <nav class="container mx-auto px-4 h-16">
    <div class="flex items-center justify-between h-full">
      <a 
        href="/" 
        class="text-xl font-bold text-gray-800 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        My Blog
      </a>
      
      <div class="flex items-center gap-6">
        <button
          id="menuButton"
          class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors px-4 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 font-medium"
        >
          MENU
        </button>

        <a 
          href="/contact"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition-colors font-medium shadow-sm hover:shadow"
        >
          CONTACT
        </a>

        <button
          id="themeToggle"
          class="relative inline-flex h-7 w-12 items-center rounded-full bg-gray-200 dark:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
          aria-label="Toggle theme"
        >
          <span class="sr-only">SWITCH</span>
          <span
            class="inline-block h-5 w-5 transform rounded-full bg-white shadow-md ring-0 transition-transform duration-200 ease-in-out dark:translate-x-6 translate-x-1"
          >
            <svg
              id="sunIcon"
              class="h-5 w-5 text-yellow-500 hidden dark:block"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              />
            </svg>
            <svg
              id="moonIcon"
              class="h-5 w-5 text-gray-900 block dark:hidden"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
            </svg>
          </span>
        </button>

        <div
          id="menuDropdown"
          class="hidden absolute top-16 right-4 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg py-1 border dark:border-gray-700 transition-all transform origin-top-right"
        >
          {navItems.map(item => (
            <a
              href={item.href}
              class="block px-4 py-2 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
            >
              {item.text}
            </a>
          ))}
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('menuButton');
  const menuDropdown = document.getElementById('menuDropdown');
  const themeToggle = document.getElementById('themeToggle');

  menuButton?.addEventListener('click', () => {
    menuDropdown?.classList.toggle('hidden');
  });

  document.addEventListener('click', (event) => {
    const target = event.target as Node;
    if (menuButton && menuDropdown && !menuButton.contains(target) && !menuDropdown.contains(target)) {
      menuDropdown.classList.add('hidden');
    }
  });

  themeToggle?.addEventListener('click', () => {
    const element = document.documentElement;
    element.classList.toggle('dark');

    const isDark = element.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
  });
</script>